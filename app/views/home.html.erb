<div ng-app="amigosInvisibles" ng-controller="personasController" class="persona-list">
    <h1>Personas</h1>
  <div ng-repeat="item in items | orderBy : 'name'" value="{{item.name}}">
      <a ng-click="edit(item)">{{item.name}}</a>
  </div>
  <%= link_to 'Shuffle', personas_shuffle_path, method: :post %>
  <div class="editing" ng-show="editing">
      <h2>Edit {{editing.name}}</h2>
      <label>Avatar:</label>
      <img ng-src="{{editing.avatar}}" ng-show="editing.avatar"/>
      <input type="file" file-input="avatar"></input>
      <label>Email:</label>
      <input type="text" ng-model="editing.email"></input>
      <a ng-click="save(new_item)"> Save </a>
  </div>
</div>
